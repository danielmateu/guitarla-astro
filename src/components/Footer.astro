<style>
    .footer {
    background-color: var(--black);
    padding: 5rem 0;
    margin-top: 5rem;
}

@media (min-width:768px) {
    .contenido {
        display: flex;
        justify-content: space-between;
    }
}
.navegacion {
    display: none;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
}
@media (min-width: 768px) {
    .navegacion {
        flex-direction: row;
        display: flex;
    }
}
.navegacion a,
.copyright {
    color: var(--white);
    font-size: 1.5rem;
    text-decoration: none;
    font-weight: 700;
    transition: .3s ease-in-out all;
}
.navegacion a:hover {
    color: var(--primary);
}
.copyright {
    text-align: center;
    

}
